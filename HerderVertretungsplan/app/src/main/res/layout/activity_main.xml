<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/lechteck5"
    tools:context="tv.lksbrm.herdervertretungsplan.MainActivity">

    <android.support.v4.widget.DrawerLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:id="@+id/drawer"
        android:background="@drawable/lechteck5"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/dlayout1"
            android:background="@drawable/lechteck5"
            android:layout_gravity="start"
            >

            <android.support.design.widget.NavigationView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:id="@+id/navview"


                app:menu="@menu/navigation_menu"

                app:itemTextColor="@color/itemtint"
                >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="230dp"
                    android:id="@+id/image"
                    android:src="@mipmap/herder"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Benutzerkonto: ???"
                    android:id="@+id/textView3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="588dp"
                    android:layout_alignParentEnd="true" />

            </android.support.design.widget.NavigationView>




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/dlayout2"
            android:background="@drawable/lechteck5"
            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/container"
                android:background="@drawable/lechteck5"/>

            <android.support.v7.widget.Toolbar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                android:background="@color/colorAccent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:title=""
                android:theme="@style/toolbarstyle"
                android:layout_alignParentStart="true">

            </android.support.v7.widget.Toolbar>



        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>




</RelativeLayout>
